<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_bill_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store Name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_bill_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill ID : storename001" />

            <TextView
                android:id="@+id/text_view_bill_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill Date : 10/08/1999" />

            <TextView
                android:id="@+id/text_view_bill_pay_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay Date : Not Paid"
                android:layout_marginBottom="@dimen/fab_margin"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_bill_amount"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/background_bill_price"
            android:gravity="center"
            android:text="Rs. 20000"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>